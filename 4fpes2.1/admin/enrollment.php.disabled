<?php
require_once '../config.php';
requireRole('admin');

// Get current admin's department
$admin_department = $_SESSION['department'] ?? '';

// Handle form submissions
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $action = $_POST['action'] ?? '';
    
    if ($action === 'enroll_student') {
        $username = sanitizeInput($_POST['username'] ?? '');
        $password = $_POST['password'] ?? '';
        $full_name = sanitizeInput($_POST['full_name'] ?? '');
        $email = sanitizeInput($_POST['email'] ?? '');
        $student_id = sanitizeInput($_POST['student_id'] ?? '');
        $year_level = sanitizeInput($_POST['year_level'] ?? '');
        $program = sanitizeInput($_POST['program'] ?? '');
        
        if (empty($username) || empty($password) || empty($full_name) || empty($student_id)) {
            $error = 'All required fields must be filled';
        } else {
            try {
                $pdo->beginTransaction();
                
                // Hash password
                $hashed_password = password_hash($password, PASSWORD_DEFAULT);
                
                // Insert user
                $stmt = $pdo->prepare("INSERT INTO users (username, password, role, full_name, email, department) VALUES (?, ?, 'student', ?, ?, ?)");
                $stmt->execute([$username, $hashed_password, $full_name, $email, $admin_department]);
                $user_id = $pdo->lastInsertId();
                
                // Insert student data
                $stmt = $pdo->prepare("INSERT INTO students (user_id, student_id, year_level, program) VALUES (?, ?, ?, ?)");
                $stmt->execute([$user_id, $student_id, $year_level, $program]);
                
                $pdo->commit();
                $success = 'Student enrolled successfully in ' . $admin_department . ' department';
            } catch (PDOException $e) {
                $pdo->rollback();
                if ($e->getCode() == 23000) {
                    $error = 'Username or Student ID already exists';
                } else {
                    $error = 'Database error: ' . $e->getMessage();
                }
            }
        }
    }
}

// Get students in current admin's department
try {
    $stmt = $pdo->prepare("SELECT u.*, s.student_id, s.year_level, s.program 
                           FROM users u 
                           JOIN students s ON u.id = s.user_id 
                           WHERE u.role = 'student' AND u.department = ? 
                           ORDER BY u.full_name");
    $stmt->execute([$admin_department]);
    $students = $stmt->fetchAll();
} catch (PDOException $e) {
    $students = [];
    $error = 'Error fetching students: ' . $e->getMessage();
}
